# FastAPI Project Rules
version: 1.0

# Python version and dependencies
python:
  version: "3.13+"
  dependencies:
    - fastapi>=0.68.0
    - uvicorn>=0.15.0
    - pydantic>=1.8.0
    - python-dotenv>=0.19.0

# Project structure
structure:
  src:
    - app/
    - tests/
    - docs/
    - requirements.txt
    - README.md
    - .env.example

# Code style
style:
  formatter: black
  line_length: 88
  rules:
    - use_type_hints: true
    - docstring_style: google
    - import_order: true

# Testing
testing:
  framework: pytest
  coverage:
    minimum: 80%
    exclude:
      - tests/*
      - docs/*

# Documentation
docs:
  format: openapi
  swagger_ui: true
  redoc: true

# Security
security:
  cors:
    enabled: true
    origins: ["*"]
  auth:
    required: true
    jwt_expiration: 30m

# API conventions
api:
  prefix: /api/v1
  response_format:
    success:
      status: true
      data: {}
      message: string
    error:
      status: false
      error: string
      details: {}

# Development
development:
  hot_reload: true
  debug: true
  port: 8000

# Production
production:
  workers: 4
  port: 80
  ssl: true

# Linting
linting:
  tools:
    - flake8
    - mypy
    - pylint
  ignore:
    - E501 # line too long
    - W503 # line break before binary operator

# Git
git:
  branches:
    main: main
  commit_convention: conventional

# Docker
docker:
  compose_file: compose.yaml
  compose_command: docker compose
